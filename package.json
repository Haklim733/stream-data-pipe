{
  "name": "iot-data-pipeline",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "bun index.ts",
    "dev": "bunx --bun vite packages/ui",
    "build": "vite build",
    "lint": "lint",
    "compile": "bun run -T tsc --build --verbose",
    "format": "prettier --write .",
    "tc:root": "bun --typecheck --exclude '**/{test,integ}.*' --run",
    "tc:frontend": "bun workspace frontend check",
    "test": "test",
    "typecheck": "bun tc:root && bun tc:frontend"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/bun": "^1.1.10",
    "@typescript-eslint/parser": "^5.0.1",
    "dotenv": "^16.3.1",
    "eslint": "^9.16.0",
    "typescript": "5.7.3",
    "vite": "6.1.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "mqtt": "^5.10.1"
  }
}
